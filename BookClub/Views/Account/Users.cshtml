@model List<BookClub.Models.ApplicationUser>
@{
    ViewBag.Title = "Users";
}

<div class="container">
    <h1>Users</h1>
    <ul class="list-group" style="font-size: 18px">
        @foreach(var user in Model)
        {
            <li class="list-group-item">
                <h4 class="list-group-item-info">
                    <a href="/Account/UserProfile/@user.Id">@user.UserName</a>
                </h4>
                <p class="list-group-item-text">Age: @user.Age</p>
                <p class="list-group-item-text">
                    <span class="label label-info">Books voted: @user.Books.Count</span>
                </p>
            </li>
        }
    </ul>
</div>

